<script>
    $("#anonymous").click(function() {
        if (this.checked) {
            $("#first-name").val("Anonymous");
            $("#last-name").val("Anonymous");
        } else {
           
        }
});
</script>
<div class="center limit">
    <h1>SIGN UP</h1>
    <hr />
    <h2>To report or receive alerts for future ICE raids, please create an account.</h2>
    <form action="/users/sign-up" method="post">
        <div class="form-group">
            <label for="firstName">First Name</label><br />
            <input type="text" name="firstName" placeholder="John">
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label><br />
            <input type="text" name="lastName" placeholder="Doe">
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone Number</label><br />
            <input type="number" name="phoneNumber" placeholder="5031234567">
        </div>
        <div class="form-group">
            <input id="anonymous" type="checkbox" name="anony" value="true">
            <label for="anonymous">Stay Anonymous</label>
        </div> 
        <button class="btn btn-danger" type="submit">JOIN</button>

    </form>
  

</div>
